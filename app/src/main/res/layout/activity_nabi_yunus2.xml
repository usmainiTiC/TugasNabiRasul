<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NabiYunus2">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="488dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">
        <Button
                android:text="Home"
                android:typeface="monospace"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:background="@drawable/button_background"
                android:layout_height="30dp"
                android:textSize="9dp"
                android:layout_alignParentTop="false"
                android:id="@+id/home_yunus2"
                android:layout_marginTop="0dp"/>
        <TextView
                android:text="Kisah Nabi Yunus A.S."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textSize="14dp"
                style="@style/Theme.AppCompat"
                android:textAlignment="center"
                android:id="@+id/textView3"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="170dp"
                   android:layout_margin="15dp"
                   android:src="@drawable/yunus"/>
        <TextView
                android:text="    Atas kesungguhannya dalam berdoa dan karena rahmat Allah maka Nabi Yunus dikeluarkan dari perut ikan paus. Ia tiba di tepi pantai dalam keadaan sakit dan lemah. Setelah Allah mengembalikan kekuatan dan kesehatannya maka ia segera kembali kepada kaumnnya."
                android:layout_width="match_parent"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/textView99"/>
        <TextView
                android:text="   Ternyata kaumnya itu menyambut kedatangannya dengan gembira. Tak kurang dari 100.000 orang telah diseru Nabi Yunus untuk menyembah Allah. Karena kaumnya menurut dan bersedia diajak beribadah kepada Allah maka Allah memberikan kelapangan dan ketentraman hidup dan kesenangan selama beberapa masa."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:typeface="monospace"
                android:id="@+id/textView"/>
        <TextView
                android:text="    Demikianlah kisah Nabi Yunus A.S, semoga kisah tadi dapat menjadi pelajaran bagi kita semua,amin ya robba alamin."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:id="@+id/textView4"
                android:textSize="10dp"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>