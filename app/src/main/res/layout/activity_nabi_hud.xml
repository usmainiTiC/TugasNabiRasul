<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NabiHud">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">
        <Button
                android:text="Home"
                android:background="@drawable/button_background"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="9dp"
                android:typeface="monospace"
                android:layout_alignParentTop="false"
                android:id="@+id/home_hud"
                android:layout_marginTop="0dp"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="488dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">
        <TextView
                android:text="Kisah Nabi Hud A.S."
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                style="@style/Theme.AppCompat"
                android:textAlignment="center"
                android:id="@+id/textView3"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="170dp"
                   android:layout_margin="15dp"
                   android:src="@drawable/hud"/>
        <TextView
                android:text="    Nabi Hud a.s. adalah keturunan dari nabi Nuh a.s. yang diutus oleh Allah s.w.t. kepada kaumnya 'Ad namanya. Kaum 'Ad adalah umat yang hidup pada jaman itu yang memiliki sifat sangat sombong dan takabur karena mereka merasa kuat dan pandai membuat bangunan-bangunan yang kokoh. Walau demikian mereka tetap menyembah berhala."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textSize="10dp"
                android:id="@+id/textView"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="10dp"/>
        <TextView
                android:text="    'Setelah datang siksaan Kami, Kami selamatkan Hud dan orang-orang yang beriman bersama dia dengan rahmat Kami, dan Kami selamatkan pula mereka di akhirat dari azab yang berat'"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textSize="10dp"
                android:id="@+id/textView5"/>
        <TextView
                android:text="     Setelah terjadi malapetaka yang hebat itu kemudian Nabi Hud a.s. berpindah tempat tinggal di negri Hadralmaut sampai akhir hayatnya. Sebab negri kamu 'Ad sudah hancur rusak dan binasa."
                android:layout_width="match_parent"
                android:typeface="monospace"
                android:layout_height="wrap_content"
                android:textSize="10dp"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp">
    </ScrollView>
</RelativeLayout>